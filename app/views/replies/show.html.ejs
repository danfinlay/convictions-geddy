<div class="hero-unit">
  <h2><%= reply.title %></h2>
  <%- linkTo('Edit this reply', editReplyPath(params.id), {class: 'btn pull-right'}); %>
</div>

<h2>Reply Properties</h2>
<% for(var i in reply) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span8">
    <h3><%= i %></h3>
  </div>
  <div class="span4">
    <h3><i class="icon-list-alt"></i><%= reply[i] %></h3>
  </div>
</div>
<% } -%><% } -%>