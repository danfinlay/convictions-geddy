<div class="hero-unit">
  <h2>All Replies</h2>
  <%- linkTo('Create a new Reply', addReplyPath, {class: 'btn pull-right'}); %>
</div>

<% if (replies) { %>
<% for (var i = 0, ii = replies.length; i < ii; i++) { %>
<div class="row list-item">
  <div class="span8">
    <h3><%- linkTo(replies[i].title, replyPath(replies[i].id)); %></h3>
  </div>
  <div class="span4">
    <h3><i class="icon-list-alt"></i><%= replies[i].id; %></h3>
  </div>
</div>
<% } %>
<% } %>
